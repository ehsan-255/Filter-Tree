{
  "name": "ftree-monorepo",
  "version": "0.1.0",
  "description": "Config-driven filtered file-tree generator - monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "keywords": [
    "file-tree",
    "filter",
    "cli",
    "vscode-extension",
    "yaml",
    "config",
    "monorepo"
  ],
  "author": "ehsan-255",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ehsan-255/Filter-Tree.git"
  },
  "homepage": "https://github.com/ehsan-255/Filter-Tree#readme",
  "bugs": {
    "url": "https://github.com/ehsan-255/Filter-Tree/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "husky": "^9.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
